<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:background="@drawable/gradientbg"
	android:layout_height="match_parent">

	<include
		layout="@layout/navbar" />

	<ScrollView
		android:layout_height="fill_parent"
		android:layout_width="fill_parent"
		android:id="@+id/ScrollView01">
		<LinearLayout
			android:layout_height="fill_parent"
			android:layout_width="fill_parent"
			android:id="@+id/ResultLinearLayout02"
			android:orientation="vertical">

			<TextView
				android:id="@+id/result"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="" />

			<TextView
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:text="-----------------------------------------------------------" />
				
			<TextView
				android:id="@+id/lblConcorda"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:text="Concorda com o resultado apresentado pelo sistema?" />

			<RadioGroup
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:id="@+id/opiniaoMedico"
				android:orientation="vertical"
				android:visibility="visible">
				<RadioButton
					android:layout_height="wrap_content"
					android:layout_width="wrap_content"
					android:id="@+id/concordo"
					android:tag="1"
					android:text="Sim" />
				<RadioButton
					android:layout_height="wrap_content"
					android:layout_width="fill_parent"
					android:id="@+id/naoconcordo"
					android:tag="2"
					android:text="NÃ£o" />
			</RadioGroup>

			<EditText
				android:id="@+id/justificativa"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:lines="5"
				android:gravity="top"
				android:text="" />
			<Button
				android:layout_height="wrap_content"
				android:layout_width="fill_parent"
				android:id="@+id/btOkResult"
				android:text="OK" />
		</LinearLayout>
	</ScrollView>

</LinearLayout>