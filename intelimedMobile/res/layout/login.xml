<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:layout_width="match_parent"
	  android:layout_height="match_parent"
	  android:background="@drawable/gradientbg">
	  
		 <TextView
		 	android:id="@+label/login"
		 	android:layout_width="fill_parent"
		 	android:layout_height="wrap_content"
		 	android:text="@string/login"
		 	android:layout_centerHorizontal="true"
		 	android:layout_centerVertical="true"
		 /> 
		<EditText
			android:id="@+campo/user"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+label/login"
			android:layout_alignLeft="@+label/login"
		/>
		<EditText
			android:id="@+campo/password"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@+campo/user"
			android:layout_alignLeft="@+campo/user"
			android:password="true"
		/>
		<Button
			android:id="@+bt/btLogin"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:text="@string/btlogin"
			android:layout_below="@+campo/password"
			android:layout_alignLeft="@+campo/password"
		/>
 </RelativeLayout> 